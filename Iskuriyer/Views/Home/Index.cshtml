@using iskuriyer.Entity
@{
    ViewBag.Title = "Iskuriyer - Sizinde bir işiniz olsun";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="home-pro">

    <!-- PRO BANNER HEAD -->
    <div class="banr-head">
        <div class="container">
            <div class="row">

                <!-- CONTENT -->
                <div class="col-sm-7">
                    <div class="text-area">
                        <div class="position-center-center col-md-10">
                            <h1> Beklediğiniz Sosyal İş Platformu Burada</h1>
                            <h6>İşverenlerle kolaylıkla iletişime geçebilir yeteneklerinizi kanıtlayabilirsiniz.</h6>
                        </div>
                    </div>
                </div>

                <div class="col-sm-5">
                    <div class="login-sec">

                        <!-- TABS -->
                        <div class="uou-tabs">
                            <ul class="tabs">
                                <li><a href="#register">Kursiyer Kaydol</a></li>
                                <li class="active"><a href="#log-in">Şirket Kaydol</a></li>
                            </ul>

                            <!-- REGISTER -->
                            <div class="content">
                                <div id="register">
                                    <form action="/KursiyerMan/InsertKursiyer" method="post">
                                        <input type="text" placeholder="Adınız" name="Adi">
                                        <input type="text" placeholder="Soyadınız" name="Soyadi">
                                        <input type="email" placeholder="Email Adresi" name="Eposta">
                                        <input type="date" placeholder="Dogum Tarihi" name="DogumTarihi">
                                        <input type="text" placeholder="Telefon Numarası" name="TelefonNo">
                                        <select name="Cinsiyet">
                                            <option value="Erkek">Erkek</option>
                                            <option value="Bayan">Bayan</option>
                                            <option value="Diger">Diğer</option>

                                        </select>
                                        <input type="password" placeholder="Parola" name="Sifre">
                                        <button type="submit">Kayıt Ol</button>
                                    </form>
                                </div>

                                <!-- LOGIN -->
                                <div id="log-in" class="active">
                                  @Html.BeginForm("InsertBussines", "BusinessMan", FormMethod.Post){
                                    @*<form action="/BusinessMan/InsertBussines" method="post">*@
                                        <input type="text" placeholder="Sirket Adi" name="SirketAdi">
                                        <input type="email" placeholder="Email Adresi" name="Eposta">

                                        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi">
                                        <input type="text" placeholder="Yetkili Adi - Soyadi" name="YetkiliAdiSoyadi">
                                        <input type="tel" placeholder="Phone" name="Telefon">
                                        <select name="Il">
                                            @foreach (var item in Session["Iller"] as List<Iller>)
                                            {
                                                <option value="@item.sehir">@item.sehir</option>
                                            }
                                        </select>
                                        <select name="Ilce">
                                            <option value="Ilce1">Ilce1</option>
                                        </select>
                                    <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi">

                                        <input type="password" placeholder="Parola">
                                        <button type="submit">Kaydol</button>
                                        @*<div class="forget">Parolanızı mı Unuttunuz? <a href="#.">Buraya Tıklayın</a></div>*@
                                    @*</form>*@  }
                                </div>
                                <div id="forget">
                                    <form>
                                        <input type="email" placeholder="Email Adresi">
                                        <button type="submit">Kaydol</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

